
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model GamerMarket.Service.Service.TransferObjects.DTO.CategoryDTO


<style>
    .form-control.disabled {
        opacity: 0.65;
        cursor: not-allowed;
    }
</style>


<form action="/Admin/Category/Update" method="post">

    @*@Html.HiddenFor(x => x.ID)*@
    <div class="form-group">
        <label for="ID">Kategori ID</label>
        <input type="text" readonly name="ID" value="@Model.ID" class="form-control disabled" />
    </div>

    <div class="form-group">
        <label for="Name">Kategori Adı</label>
        <input type="text" name="Name" value="@Model.Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="Description">Kategori Açıklaması</label>
        <textarea name="Description" class="form-control" rows="5">@Model.Description</textarea>
    </div>



    <input type="submit" value="Güncelle" class="form-control btn btn-primary" />

</form>

