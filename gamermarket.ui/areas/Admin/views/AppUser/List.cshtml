
@{
    ViewBag.Title = "List";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@model IEnumerable<GamerMarket.Model.Model.Entities.AppUser>


<div class="col-lg-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Adı</th>
                <th>Soyadı</th>
                <th>Kullanıcı Adı</th>
                <th>Email</th>
                <th>Rol</th>
                <th>Fotoğraf</th>
                <th colspan="2">Güncelle / Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.LastName</td>
                    <td>@item.UserName</td>
                    <td>@item.Email</td>
                    <td>@item.Role.ToString()</td>
                    <td>
                        <img src="@item.ImagePath" style="display:block" height="30" />
                    </td>
                    <td>
                        <a href="/Admin/AppUser/Update/@item.ID">Güncelle</a>
                        /
                        <a href="/Admin/AppUser/Delete/@item.ID">Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

